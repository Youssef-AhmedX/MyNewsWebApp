@model IEnumerable<NewsViewModel>

@{
    ViewData["Title"] = "Welcome To MyNews";
}

<div class="row align-items-center me-0" style="padding-top:120px;margin-bottom:50px;padding-bottom:90px;background: currentColor;">
    <div class="col-md-6 text-center text-md-end mb-4 mb-md-0">
        <h1 class="display-4 text-white" style="font-weight: 400;">Welcome To </h1>
    </div>
    <div class="col-md-6 text-center text-md-start">
        <img src="/Images/MyNewsLogo.png" />
    </div>
</div>
<div class="container" style="margin-top:0px;margin-bottom:110px;">

    <div class="card mt-4 shadow">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var news in Model)
                    {
                        <tr>
                            <td>
                                <div class="card">
                                    <div class="row">
                                        <div class="col-md-3 p-3 text-center">
                                            <a asp-controller="MyNews" asp-action="details" asp-route-id="@news.Id">
                                                <img src="/Images/NewsCoverImgs/@news.CoverImgPath" class="card-img-top border rounded p-2 ms-2 me-2" style="max-width:250px;max-height:150px;object-fit: contain" alt="...">
                                            </a>
                                        </div>
                                        <div class="card-body col-md-8 ms-2">
                                            <h5 class="card-title me-5 mb-1">
                                                <a asp-controller="MyNews" asp-action="details" asp-route-id="@news.Id">
                                                    <p class="fw-bold text-primary mb-0">
                                                        @news.Title
                                                    </p>
                                                </a>
                                            </h5>
                                            <span class="badge rounded-pill bg-primary mb-3">By: @news.AuthorName</span>
                                            <span class="badge rounded-pill bg-success mb-3">@news.PublicationDate.ToString("dddd MMMM, yyyy")</span>
                                            <p class="card-text textOneLine me-3">@news.NewsContent</p>
                                        </div>
                                    </div>
                                </div>


                            </td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            datatable = $('table').DataTable({
                "ordering": false
            });
        });
    </script>
}
