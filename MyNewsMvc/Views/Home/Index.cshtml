@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="mb-5 row align-items-center">
    <div class="col text-end fw-bold">
        <h1 class="display-4">Welcome To </h1>
    </div>
    <div class="col">
        <img src="/Images/MyNewsLogo.png"/>
    </div>
</div>
<div class="row">
    <div class="col-md-6 text-center mb-5">
        <div class="card rounded shadow">
            <div class="card-body m-4">
                <h1>
                    <i class="bi bi-newspaper"></i>
                </h1>
                <h3 class="card-title mb-4">There are <span class="text-success">@Model.NewsCount</span> News Live Now</h3>
                <a asp-controller="News" asp-action="Index" class="btn btn-primary">Go To News</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 text-center mb-5">
        <div class="card rounded shadow">
            <div class="card-body m-4">
                <h1>
                    <i class="bi bi-vector-pen"></i>
                </h1>
                <h3 class="card-title mb-4">We Have <span class="text-success">@Model.AuthorsCount</span> Authors</h3>
                <a asp-controller="Authors" asp-action="Index" class="btn btn-primary">Go To Authors</a>
            </div>
        </div>
    </div>
</div>
